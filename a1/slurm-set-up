	On Manager
	--------------

	ln -s /opt/slurm-21.08.8/etc/slurmctld.service  	/usr/lib/systemd/system/slurmctld.service


	ln -s /opt/slurm-21.08.8/etc/slurmd.service  	/usr/lib/systemd/system/slurmd.service
	
	
	TO Debug
	------------------

	/opt/slurm-21.08.8/sbin/slurmctld -D


	On Manager
	-------------
	apt-get install mailutils



	On Manager
	---------------
	
	export PATH="/opt/slurm-21.08.8/bin:$PATH"        
	export PATH="/opt/slurm-21.08.8/sbin:$PATH"
	export LD_LIBRARY_PATH="/opt/slurm-21.08.8/lib:$LD_LIBRARY_PATH"

	On Manager 
	-------------
	scp -r /opt/slurm-21.08.8/etc/slurm.conf slurm@<IP of compute-1>:/tmp
	scp -r /opt/slurm-21.08.8/etc/slurm.conf slurm@<IP of compute-2>:/tmp

	On Compute Nodes
	-------------------
	cp -r /tmp/slurm.conf /opt/slurm-21.08.8/etc
	ln -s /opt/slurm-21.08.8/etc/slurmd.service  	/usr/lib/systemd/system/slurmd.service
	systemctl start slurmd.service

	On Manager
	---------------
	systemctl start slurmd.service

	cp cgroup.conf.example cgroup.conf

	cp slurmdbd.conf.example slurmdbd.conf

		vi slurmdbd.conf

		
	AuthType=auth/munge
	DbdHost=localhost
	SlurmUser=root
	DebugLevel=verbose  
	LogFile=/var/log/slurm/slurmdbd.log
	PidFile=/var/run/slurmdbd.pid
	StorageType=accounting_storage/mysql
	StorageUser=root
	StoragePass=slurm123
	StorageLoc=slurm_acct_db


ln -s /opt/slurm-21.08.8/etc/slurmdbd.service  	/usr/lib/systemd/system/slurmdbd.service


	systemctl start slurmdbd.service
	systemctl status slurmdbd.service


	On Manager
	--------------

	apt install mariadb-server 


	show databases;
	CREATE USER 'slurm'@'localhost';
	GRANT ALL PRIVILEGES ON slurm_acct_db.* TO 'slurm'@'localhost';
	SET PASSWORD FOR 'slurm'@'localhost' = PASSWORD('slurm123');


	
	To Resume the nodes from down state
	------------------------------------------

	scontrol update NodeName= State=RESUME




    

	




